{
  "name": "@far-world-labs/verblets",
  "version": "0.1.1",
  "description": "OpenAI Client",
  "main": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Far-World-Labs/Verblets.git"
  },
  "scripts": {
    "start": "node scripts/runner/index.js",
    "dev": "nodemon --no-warnings scripts/runner/index.js",
    "editor": "node scripts/simple-editor/index.js",
    "--": "npm run script -- generate-verblet foo",
    "script": "./scripts/run.sh",
    "test": "vitest",
    "examples": "source .env && EXAMPLES=true vitest --config .vitest.config.examples.js",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{js,jsx}' --fix",
    "husky:install": "husky install",
    "husky:uninstall": "husky uninstall",
    "prepare": "npx husky install"
  },
  "config": {
    "gen-script": "./scripts/run.sh gen-$1"
  },
  "author": "Far World Labs",
  "license": "All Rights Reserved",
  "dependencies": {
    "acorn": "^8.8.2",
    "acorn-walk": "^8.2.0",
    "ajv": "^8.12.0",
    "chai": "^4.3.7",
    "change-case": "^4.1.2",
    "commander": "^11.0.0",
    "dependency-tree": "^10.0.1",
    "dotenv": "^16.0.3",
    "gpt-tokenizer": "^2.1.2",
    "gpt4-tokenizer": "^1.3.0",
    "mocha": "^10.2.0",
    "node-fetch": "^3.3.0",
    "node-record-lpcm16": "^1.0.1",
    "ramda": "^0.29.0",
    "redis": "^4.6.5",
    "uuid": "^9.0.0",
    "vitest": "^3.1.3",
    "whisper-node": "^1.1.1",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@vitest/ui": "^3.1.3",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "install-peerdeps": "^3.0.3",
    "lint-staged": "^13.2.2",
    "nodemon": "^3.1.10",
    "npm-check": "^6.0.1",
    "prettier": "^2.8.8",
    "release-it": "^19.0.3",
    "why-is-node-running": "^2.2.2"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:fix"
    ]
  }
}
